# Azure Document Intelligence PDF Processing Pipeline
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# AZURE SUBSCRIPTION (for deployment scripts)
# ===========================================
# Find your subscription: az account list --output table
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_RESOURCE_GROUP=rg-docprocessing-dev

# ===========================================
# REQUIRED: Document Intelligence Settings
# ===========================================
# Get these from Azure Portal > Your Document Intelligence resource > Keys and Endpoint
DOC_INTEL_ENDPOINT=https://YOUR-RESOURCE-NAME.cognitiveservices.azure.com
DOC_INTEL_API_KEY=your-api-key-here

# ===========================================
# REQUIRED: Cosmos DB Settings
# ===========================================
# Get endpoint from Azure Portal > Your Cosmos DB account > Keys
COSMOS_ENDPOINT=https://YOUR-COSMOS-ACCOUNT.documents.azure.com:443/
COSMOS_DATABASE=DocumentsDB
COSMOS_CONTAINER=ExtractedDocuments

# ===========================================
# OPTIONAL: Key Vault (for production secrets)
# ===========================================
# KEY_VAULT_NAME=your-keyvault-name

# ===========================================
# OPTIONAL: Processing Settings
# ===========================================
# Model ID for Document Intelligence (prebuilt or custom)
DEFAULT_MODEL_ID=prebuilt-layout

# Maximum concurrent requests (stay below 15 TPS rate limit)
MAX_CONCURRENT_REQUESTS=10

# Function timeout in seconds
FUNCTION_TIMEOUT=230

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===========================================
# OPTIONAL: Azure Functions Runtime (for func start)
# These are also in local.settings.json
# ===========================================
# FUNCTIONS_WORKER_RUNTIME=python
# AzureWebJobsStorage=UseDevelopmentStorage=true
